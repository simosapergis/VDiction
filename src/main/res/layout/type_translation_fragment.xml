<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0D0F"
    android:backgroundTint="#0A0D0F"
    android:fitsSystemWindows="false"
    android:visibility="visible"
    tools:context=".fragments.ImageTranslationFragment">


    <EditText
        android:id="@+id/typeEditText"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center|top"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="#9A98A3"
        android:gravity="start|left"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollIndicators="right"
        android:scrollbarSize="10dp"
        android:scrollbars="vertical"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/translatedText"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#9A98A3"
        android:scrollbars="vertical"
        android:visibility="invisible" />
<!--
    <TextView
        android:id="@+id/translatedTextLabel"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:contextClickable="false"
        android:ems="14"
        android:text="@string/translation"
        android:textColor="#9A98A3"
        android:textSize="18sp"
        android:textStyle="bold" />
    -->

    <TextView
        android:id="@+id/rawTextLabel"
        style="@android:style/Widget.Holo.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:contextClickable="false"
        android:ems="14"
        android:text="@string/type_below"
        android:textColor="#9A98A3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/translateButton"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_text_fields_white_24dp"
        android:text="@string/translate" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>